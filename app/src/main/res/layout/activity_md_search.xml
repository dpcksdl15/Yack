<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/laout1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/box_shadow_bottom"
        >


        <ImageView
            android:id="@+id/bt_back_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            app:srcCompat="@drawable/combined_shape"
            />

        <TextView
            android:id="@+id/et_search_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/nr"
            android:textColor="#404041"
            android:text="의약품 검색" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:gravity="center">


            <TextView
                android:id="@+id/bt_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="17dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#ff1d50"
                android:fontFamily="@font/nr"
                android:text="초기화"
                />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4cd8d8d8"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="28dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404041"
            android:textSize="14sp"
            android:fontFamily="@font/GmarketSansTTFMedium"
            android:text="식별문자"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="18dp"
            android:paddingLeft="16dp"
            android:background="#ffffff"
            android:textSize="12sp"
            android:hint="약에 적혀있는 문자를 입력해 주세요."
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#404041"
            android:textSize="14sp"
            android:fontFamily="@font/GmarketSansTTFMedium"
            android:text="모양"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:id="@+id/ll_cycler"
                android:layout_width="45dp"
                android:layout_height="63dp"
                android:orientation="vertical"
                android:background="#ffffff">



            </LinearLayout>








        </LinearLayout>



    </LinearLayout>





</LinearLayout>